<div class="panel panel-default">
    
    {{#bootstrap/panel-heading primary="Daily Org Limits" secondary="rolling 24 hour window"}}
        <div class="pull-right">{{connection-status status=socketStatus}}</div>
    {{/bootstrap/panel-heading}}

    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Used</th>
            </tr>
        </thead>
        <tbody>
            {{#each modelPretty as |limit|}}
            <tr>
                <td>{{limit.name}}</td>
                <td>{{limit.value}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
