/* NOTES:

We don't want to set the global <"node": true> linter in here because this project is technically a front-end
app that runs in the browser. We want jshint to throw an error if node specific configurations make into the
front-end code. Use the inline <jshint node:true> in any node files that are used during development.
See the top of the ember-cli-build.js file for an example.

*/
{
  "predef": [
    "document",
    "window",
    "-Promise",
    "_"
  ],
  "browser": true,
  "boss": true,
  "curly": true,
  "debug": false,
  "devel": true,
  "eqeqeq": true,
  "evil": true,
  "forin": false,
  "immed": false,
  "laxbreak": false,
  "newcap": true,
  "noarg": true,
  "noempty": false,
  "nonew": false,
  "nomen": false,
  "onevar": false,
  "plusplus": false,
  "regexp": false,
  "undef": true,
  "sub": true,
  "strict": false,
  "white": false,
  "eqnull": true,
  "esnext": true,
  "unused": true
}
